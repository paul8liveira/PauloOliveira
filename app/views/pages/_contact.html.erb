<section id="contact">
  <div class="container">
      <div class="row">
          <div class="col-lg-12 text-center">
              <h2>Entre em contato!</h2>
              <hr class="star-primary">
          </div>
      </div>
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
          <%= form_for @contact,  :html => {:id => 'contact-form'}, :remote => true do |f|%>
            <div class="messages"></div>
            <div class="controls">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                          <label for="form_name">Nome *</label>
                          <%= f.text_field :name, class: "form-control", placeholder: "Informe seu nome *", required: true, :data => { :erro => "Nome é obrigatório." } %>
                          <div class="help-block with-errors"></div>
                        </div>
                    </div>                    
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                          <label for="form_email">Email *</label>
                          <%= f.email_field :email, class: "form-control", placeholder: "Informe seu e-mail *", required: true, :data => { :erro => "E-mail é obrigatório." } %>                          
                          <div class="help-block with-errors"></div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                          <label for="form_phone">Telefone</label>
                          <%= f.text_field :phone, class: "form-control", placeholder: "Informe seu telefone" %>
                          <div class="help-block with-errors"></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label for="form_message">Mensagem *</label>
                      <%= f.text_area :message, class: "form-control", placeholder: "Digite uma mensagem para mim *", required: true, :data => { :erro => "Por favor, escreva uma mensagem." }, rows: "4" %>
                      <div class="help-block with-errors"></div>
                    </div>
                  </div>
                  <div class="col-md-12">
                    <%= f.submit "Enviar mensagem", class: "btn btn-success btn-send" %>
                  </div>
                </div>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</section>