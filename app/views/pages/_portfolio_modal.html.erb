<% id = 1 %>
<% @portfolios.each do |portfolio| %>
  <div class="portfolio-modal modal fade" id="portfolioModal<%= id %>" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-content">
        <div class="close-modal" data-dismiss="modal">
            <div class="lr">
                <div class="rl">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <div class="modal-body">
                        <h2><%= portfolio.name %></h2>
                        <hr class="star-primary">
                        <%= image_tag portfolio.avatar.url(:original), :class => 'img-responsive img-centered' %>
                        <p><%= portfolio.description.html_safe %></p>
                        <ul class="list-inline item-details">
                            <li>
                              <strong>Acesso:</strong> <a href="<%= portfolio.url_access %>" target="_blank"><%= portfolio.url_access %></a>
                            </li>
                            <li>
                              <strong>Criado em:</strong> <%= portfolio.birth_date %>  
                            </li>
                            <li>
                              <strong>Plataforma:</strong> <%= portfolio.language.name %></a>
                            </li>
                        </ul>
                        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i> Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>
  <% id += 1 %>
<% end %>